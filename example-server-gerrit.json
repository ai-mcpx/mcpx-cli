{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-10-17/server.schema.json",
  "name": "io.modelcontextprotocol.anonymous/test-server-gerrit",
  "title": "Test Gerrit MCP Server",
  "description": "A test mcp server for gerrit repository",
  "websiteUrl": "https://anonymous.modelcontextprotocol.io/test-server-gerrit",
  "repository": {
    "url": "http://127.0.0.1:8080/plugins/gitiles/example/+/refs/heads/master/test-server-gerrit",
    "source": "gerrit",
    "id": "example/test-server-gerrit"
  },
  "version": "1.0.0",
  "packages": [
    {
      "registryType": "docker",
      "registryBaseUrl": "https://docker.io",
      "identifier": "example/test-server-gerrit",
      "version": "1.0.0",
      "runtimeHint": "docker",
      "transport": {
        "type": "stdio"
      },
      "runtimeArguments": [
        {
          "type": "named",
          "name": "--rm",
          "description": "Remove container after exit",
          "isRequired": true
        },
        {
          "type": "named",
          "name": "-p",
          "valueHint": "port_mapping",
          "description": "Port mapping for the container",
          "format": "string",
          "default": "8004:8000",
          "isRequired": false
        }
      ],
      "environmentVariables": [
        {
          "name": "MCP_HOST",
          "description": "Server host address",
          "format": "string",
          "isRequired": false,
          "default": "0.0.0.0"
        },
        {
          "name": "MCP_PORT",
          "description": "Server port number",
          "format": "number",
          "isRequired": false,
          "default": "8004"
        }
      ]
    }
  ],
  "remotes": [
    {
      "type": "streamable-http",
      "url": "https://anonymous.modelcontextprotocol.io/test-server-gerrit",
      "headers": [
        {
          "name": "Content-Type",
          "value": "application/json",
          "description": "Content type for JSON requests"
        }
      ]
    }
  ]
}
